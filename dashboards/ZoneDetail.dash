# Navigation
back_main:
    widget_type: navigate
    title: Main Dashboard
    dashboard: CropSteering
    icon: mdi-home
    widget_style: "background-color: #2d5aa0;"

controls_nav:
    widget_type: navigate
    title: Controls
    dashboard: Controls
    icon: mdi-cog
    widget_style: "background-color: #2d5aa0;"

# Layout
layout:
    - zone1_title(3x1), zone2_title(3x1), zone3_title(3x1)
    - zone1_enable, zone1_override, zone1_vwc_big, zone2_enable, zone2_override, zone2_vwc_big, zone3_enable, zone3_override, zone3_vwc_big
    - zone1_group, zone1_priority, zone1_ec_big, zone2_group, zone2_priority, zone2_ec_big, zone3_group, zone3_priority, zone3_ec_big
    - zone1_health, zone1_daily_water, zone1_safety, zone2_health, zone2_daily_water, zone2_safety, zone3_health, zone3_daily_water, zone3_safety
    - spacer(12x1)
    - back_main, controls_nav