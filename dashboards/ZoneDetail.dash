##
## Zone Detail Dashboard
## Detailed monitoring and control for each irrigation zone
##

title: Zone Details & Control
widget_dimensions: [120, 120]
widget_margins: [5, 5]
columns: 12
global_parameters:
    use_comma: 0
    precision: 1
    shorten: 1

# Zone 1 Section
zone1_title:
    widget_type: label
    text: "ZONE 1"
    text_style: "color: #00ccff; font-size: 150%; font-weight: bold;"
    widget_style: "background-color: #1e1e1e; text-align: center;"

zone1_enable:
    widget_type: switch
    title: Zone 1 Enable
    entity: switch.crop_steering_zone_1_enabled
    icon_on: mdi-water
    icon_off: mdi-water-off

zone1_override:
    widget_type: switch
    title: Zone 1 Override
    entity: switch.crop_steering_zone_1_manual_override
    icon_on: mdi-hand-back-right
    icon_off: mdi-hand-back-right-off

zone1_vwc_big:
    widget_type: sensor
    title: VWC
    entity: sensor.crop_steering_vwc_zone_1
    text_style: "color: white; font-size: 120%;"
    value_style: "color: #00ff88; font-size: 200%;"
    units: "%"
    widget_style: "background-color: #1e1e1e;"

zone1_ec_big:
    widget_type: sensor
    title: EC
    entity: sensor.crop_steering_ec_zone_1
    text_style: "color: white; font-size: 120%;"
    value_style: "color: #ffaa00; font-size: 200%;"
    units: "mS/cm"
    widget_style: "background-color: #1e1e1e;"

zone1_group:
    widget_type: select
    title: Zone 1 Group
    entity: select.crop_steering_zone_1_group

zone1_priority:
    widget_type: select
    title: Zone 1 Priority
    entity: select.crop_steering_zone_1_priority

zone1_health:
    widget_type: sensor
    title: Health Score
    entity: sensor.crop_steering_zone_1_health_score
    text_style: "color: white;"
    value_style: "color: #00ff00;"

zone1_daily_water:
    widget_type: sensor
    title: Daily Water
    entity: sensor.crop_steering_zone_1_daily_water_usage
    text_style: "color: white;"
    value_style: "color: #00aaff;"
    units: "L"

zone1_safety:
    widget_type: sensor
    title: Safety Status
    entity: sensor.crop_steering_zone_1_safety_status
    text_style: "color: white;"
    value_style: "color: #ffffff;"

