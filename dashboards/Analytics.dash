    title: Zone 3 Daily
    entity: sensor.crop_steering_zone_3_daily_water_usage
    text_style: "color: white;"
    value_style: "color: #00aaff;"
    units: "L"

zone1_weekly:
    widget_type: sensor
    title: Zone 1 Weekly
    entity: sensor.crop_steering_zone_1_weekly_water_usage
    text_style: "color: white;"
    value_style: "color: #0088ff;"
    units: "L"

zone2_weekly:
    widget_type: sensor
    title: Zone 2 Weekly
    entity: sensor.crop_steering_zone_2_weekly_water_usage
    text_style: "color: white;"
    value_style: "color: #0088ff;"
