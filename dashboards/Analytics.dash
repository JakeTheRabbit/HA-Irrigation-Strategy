# Current Averages
averages_title:
    widget_type: label
    text: "CURRENT AVERAGES"
    text_style: "color: #00ccff; font-size: 150%; font-weight: bold;"
    widget_style: "background-color: #1e1e1e; text-align: center;"

avg_vwc:
    widget_type: sensor
    title: Average VWC
    entity: sensor.crop_steering_configured_avg_vwc
    text_style: "color: white; font-size: 120%;"
    value_style: "color: #00ff88; font-size: 200%;"
    units: "%"
    widget_style: "background-color: #1e1e1e;"

avg_ec:
    widget_type: sensor
    title: Average EC
    entity: sensor.crop_steering_configured_avg_ec
    text_style: "color: white; font-size: 120%;"
    value_style: "color: #ffaa00; font-size: 200%;"
    units: "mS/cm"
    widget_style: "background-color: #1e1e1e;"

ec_ratio:
    widget_type: sensor
    title: EC Ratio
    entity: sensor.crop_steering_ec_ratio
    text_style: "color: white; font-size: 120%;"
    value_style: "color: #ffcc00; font-size: 200%;"
    widget_style: "background-color: #1e1e1e;"

# Navigation
back_main:
    widget_type: navigate
    title: Main Dashboard
    dashboard: CropSteering
    icon: mdi-home
    widget_style: "background-color: #2d5aa0;"

zones_nav:
    widget_type: navigate
    title: Zone Details
    dashboard: ZoneDetail
    icon: mdi-view-dashboard
    widget_style: "background-color: #2d5aa0;"

controls_nav:
    widget_type: navigate
    title: Controls
    dashboard: Controls
    icon: mdi-cog
    widget_style: "background-color: #2d5aa0;"

# Layout
layout:
    - performance_title(3x1), water_title(3x1), health_title(3x1), safety_title(3x1)
    - system_health, system_efficiency, daily_water, zone1_daily, zone1_health, zone1_efficiency, system_safety, zone1_safety
    - water_efficiency, sensor_health, zone2_daily, zone3_daily, zone2_health, zone2_efficiency, zone2_safety, zone3_safety
    - spacer(4x1), zone1_weekly, zone2_weekly, zone3_health, zone3_efficiency, spacer(4x1)
    - spacer(4x1), zone3_weekly, spacer(7x1)
    - spacer(12x1)
    - averages_title(3x1), spacer(9x1)
    - avg_vwc, avg_ec, ec_ratio, spacer(9x1)
    - spacer(12x1)
    - back_main, zones_nav, controls_nav