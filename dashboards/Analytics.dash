##
## Analytics Dashboard
## Performance metrics and system analytics
##

title: System Analytics & Performance
widget_dimensions: [120, 120]
widget_margins: [5, 5]
columns: 12
global_parameters:
    use_comma: 0
    precision: 1
    shorten: 1

# System Performance Section
performance_title:
    widget_type: label
    text: "SYSTEM PERFORMANCE"
    text_style: "color: #00ff88; font-size: 150%; font-weight: bold;"
    widget_style: "background-color: #1e1e1e; text-align: center;"

system_health:
    widget_type: sensor
    title: System Health
    entity: sensor.crop_steering_system_health_score
    text_style: "color: white; font-size: 120%;"
    value_style: "color: #00ff00; font-size: 200%;"
    units: "%"
    widget_style: "background-color: #1e1e1e;"

system_efficiency:
    widget_type: sensor
    title: System Efficiency
    entity: sensor.crop_steering_system_efficiency
    text_style: "color: white; font-size: 120%;"
    value_style: "color: #00ff00; font-size: 200%;"
    units: "%"
    widget_style: "background-color: #1e1e1e;"

water_efficiency:
    widget_type: sensor
    title: Water Efficiency
    entity: sensor.crop_steering_water_efficiency
    text_style: "color: white; font-size: 120%;"
    value_style: "color: #00aaff; font-size: 200%;"
    widget_style: "background-color: #1e1e1e;"

sensor_health:
    widget_type: sensor
    title: Sensor Health
    entity: sensor.crop_steering_sensor_health
    text_style: "color: white; font-size: 120%;"
    value_style: "color: #ffaa00; font-size: 200%;"
    units: "%"
    widget_style: "background-color: #1e1e1e;"

